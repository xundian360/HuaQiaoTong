<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="5dp"
    android:orientation="horizontal"
    android:background="@android:color/white" >
	
    <ImageView 
        android:id="@+id/b00v01ZhandianItemLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b00v01_gongjian_logo" />
    
    <TextView 
        android:id="@+id/b00v01ZhandianItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:textSize="15sp"
        android:text="易买得*麦当劳" />
    
    <ImageView 
        android:id="@+id/b00v01ZhandianItemArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b00v01_left_arrow" />
    
</LinearLayout>