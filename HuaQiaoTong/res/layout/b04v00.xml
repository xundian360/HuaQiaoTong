<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE1E1E1" >
    
   	<ImageView 
        android:id="@+id/b04v00CenterLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/com_transparent"
        android:layout_centerInParent="true" />
    
    <LinearLayout 
        android:id="@+id/b04v00UserInfoLayput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/b04v00CenterLine" >
        
        <EditText 
            android:id="@+id/b04v00UserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/B04v01UserTextTheme"
            android:background="@android:color/white"
            android:hint="@string/b04v00_hint_user_name" />
        
        <EditText 
            android:id="@+id/b04v00UserPas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/B04v01UserTextTheme"
            android:inputType="textPassword"
             android:imeOptions="actionUnspecified"
            android:imeActionLabel="@string/b04v01_login_text"
            android:background="@android:color/white"
            android:hint="@string/b04v00_hint_user_pass" />
    </LinearLayout>
    
    <ImageView 
        android:id="@+id/b04v00HuaqiaoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/com_transparent"
        android:layout_above="@+id/b04v00UserInfoLayput"
        android:src="@drawable/b04v00_huaqiao_img"
        android:layout_margin="10dp" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:padding="20dp" >
        
        <ImageView 
            android:id="@+id/b04v00SignBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/b04v00_sign_img" />
        
        <ImageView 
            android:id="@+id/b04v00OtherLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/b04v00_other_login_img" />
    </LinearLayout>

</RelativeLayout>