<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pla="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/b03v04MainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b00v00_layout_hc_center_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/b03v04UserLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/test_user_logo" />

            <TextView
                android:id="@+id/b03v04UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/b03v00_msg_user_name"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/b03v04ItemImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/b03v04_item_img_bg"
            android:scaleType="fitXY"
            android:src="@drawable/test_b03v04_img" />

        <TextView
            android:id="@+id/b03v04ItemTittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="5dp"
            android:text="@string/b00v05_no_select_fangan_text"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageView
                android:id="@+id/b03v04ItemComImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b03v00_item_comment_logo" />

            <TextView
                android:id="@+id/b03v04ItemComNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="123次评论"
                android:textColor="@color/b00_v00_b_text_color_0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/b03v04ItemComTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="2013年12月25日"
                android:textColor="@color/b00_v00_b_text_color_0"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>