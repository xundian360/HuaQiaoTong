<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b00_v00_bg_color" >

    <!-- Tittle -->

    <RelativeLayout
        android:id="@+id/b00v05TittleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b00v00_layout_top_bg"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/b00v05RetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/com_transparent"
            android:padding="5dp"
            android:src="@drawable/b00v00_return_0_0" />

        <TextView
            android:id="@+id/b00v05Tittle"
            style="@style/CommonTittleTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/b00v05_tittle_text" />
    </RelativeLayout>

    <!-- 换乘方案选择 -->

    <ListView
        android:id="@+id/b00v05Huancheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b00v05TittleLayout"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/b00v04_layout_center_bg"
        android:divider="@drawable/b00v02_item_line_img" />

    <TextView
        android:id="@+id/b00v05OtherFangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b00v05Huancheng"
        android:layout_marginTop="10dp"
        android:background="@drawable/b00v04_layout_center_bg"
        android:gravity="center"
        android:padding="15dp"
        android:text="点击加载更多方案"
        android:textColor="@color/b00_v05_more_text_color"
        android:textSize="18sp" />

</RelativeLayout>