<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b00_v00_main_bg" >

    <!-- Tittle -->

    <RelativeLayout
        android:id="@+id/b00v05TittleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/b00_v00_tittle_color"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/b00v05RetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/com_transparent"
            android:padding="5dp"
            android:src="@drawable/b00v00_return_0" />

        <TextView
            android:id="@+id/b00v05Tittle"
            style="@style/CommonTittleTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/b00v05_tittle_text" />

        <TextView
            android:id="@+id/b00v05OtherFangan"
            style="@style/CommonTittleRightTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/b00v05_other_fangan_text" />
        
    </RelativeLayout>

    <!-- 换乘方案选择 -->

    <ListView
        android:id="@+id/b00v05Huancheng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/b00_v00_panal_bg"
        android:divider="@drawable/b00v02_item_line_img"
        android:layout_below="@+id/b00v05TittleLayout" />

</RelativeLayout>