<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CommonPanddingTheme2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/b01v04PoiTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="灶本善"
            android:textColor="@color/text_color_2"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/b01v04PoiDetailBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b01v04_detail_img" />

            <TextView
                style="@style/B01v00ItemTextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b01v04_detail_text"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/b01v04_btn_con_bg"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/b01v04PoiToHere"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b01v04_line_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b01v04_detail_line_text"
                android:textColor="@color/text_color_2"
                android:textSize="20sp" />
        </LinearLayout>
        
        <ImageView 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFE4E4E4" />

        <LinearLayout
            android:id="@+id/b01v04PoiCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b01v04_call_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b01v04_detail_call_text"
                android:textColor="@color/text_color_2"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>