<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/b00v00ZdBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/b00v00_layout_his_item_bg"
        android:gravity="right"
        android:tag="back" >

        <Button
            android:id="@+id/b00v00ZdZdBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/b00_v00_his_f_bg_color"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="@string/b00v00_his_first"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/b00v00ZdDlBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/b00_v00_his_d_bg_color"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="@string/b00v00_his_delete"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b00v00ZdFront"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b00v00_layout_his_item_bg"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:tag="front" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/b00v00ZdName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b00v00_layout_his_item_detail_bg"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="易买得"
                    android:textColor="@color/b00_v00_his_zd_tittle_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/b00v00_zd_his_location_icon" />

                    <TextView
                        android:id="@+id/b00v00ZdLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/b00v00_layout_his_item_detail_bg"
                        android:paddingBottom="3dp"
                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:text="北站台"
                        android:textColor="@color/text_color_2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/b00v00_zd_his_bus_icon" />

                    <TextView
                        android:id="@+id/b00v00ZdBuses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:paddingBottom="3dp"
                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:text="228路，104路，253路"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>