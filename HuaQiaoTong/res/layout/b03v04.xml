<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pla="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b00_v00_bg_color" >
    
   <!-- Tittle -->
    <RelativeLayout
        android:id="@+id/b03v04TittleLayout"
        style="@style/CommonPanddingTheme1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b00v00_layout_top_bg"
        android:gravity="center_vertical"
        android:padding="5dp"  >

        <ImageView
            android:id="@+id/b03v04RetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/b00v00_return_0_0"/>

        <TextView
             android:id="@+id/b03v04Tittle"
           style="@style/CommonTittleTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/b04v05_item_meishi_color"
            android:text="@string/b03v04_tittle_text" />
        
		<TextView
            android:id="@+id/b03v04AddBtn"
            style="@style/B01v03ImpTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="@string/b03v04_text_fatie"
            android:textColor="@color/b00_v00_b_text_color_1"
            android:textSize="18sp" />
    </RelativeLayout>
    
        <com.xundian360.huaqiaotong.view.com.XListView
        android:id="@+id/b03v04TieList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/b03v04TittleLayout"
        android:divider="@null"
        android:scrollbars="@null"
        android:background="@color/b00_v00_bg_color" 
        android:dividerHeight="10dp"
        android:padding="10dp" />

</RelativeLayout>