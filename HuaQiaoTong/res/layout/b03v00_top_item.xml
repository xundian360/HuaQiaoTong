<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/b03v00TompItemImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_img_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/b03v00TompItemImg"
        android:background="@color/b03_v00_item_bg"
        android:gravity="center"
        android:padding="5dp" >

        <TextView
            android:id="@+id/b03v00TompItemName"
            style="@style/CommonButtonItemTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>