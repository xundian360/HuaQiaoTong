<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/b03v00LeftFrame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/b03_v00_left_item_bg" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/b03v00ItemUserLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b03v00_left_user_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/b03v00ItemLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/com_transparent"
                    android:text="@string/b03v00_btn_login"
                    android:textColor="@color/b04_v01_green"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/b03v00ItemSelfCenter"
                    style="@style/CommonPanddingTheme1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/b03_v00_left_item_self_center_bg"
                    android:text="@string/b03v00_btn_self_center"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>