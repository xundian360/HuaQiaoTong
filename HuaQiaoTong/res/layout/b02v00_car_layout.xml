<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b01_v00_main_bg" >

    <!-- Tittle -->

    <LinearLayout
        android:id="@+id/b02v00CarTittleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/b02v00CarTittle"
                style="@style/CommonTittleTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b02v00_tittle_text"
                android:textColor="@color/text_color_2" />

            <TextView
                android:id="@+id/b02v00CarCancelBtn"
                style="@style/CommonTittleSubTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/b04v01_tittle_cancle"
                android:textColor="@color/b04v05_return_text_color" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_color_2" />
    </LinearLayout>

    <ListView
        android:id="@+id/b02v00CarList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b02v00CarTittleLayout" />

</RelativeLayout>