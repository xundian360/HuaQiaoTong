<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_transparent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/b00_main_nav" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/com_transparent"
        android:paddingTop="15dp"
        android:orientation="vertical"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2" >

            <Button
                android:id="@+id/b00GjBtn"
                style="@style/b00RightBtnStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/b00_gj_btn_0"
                android:text="@string/b03v00_left_gj" />

            <Button
                android:id="@+id/b00ZxcBtn"
                style="@style/b00RightBtnStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/b00_zxc_btn_0"
                android:text="@string/b03v00_left_zxc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2" >

            <Button
                android:id="@+id/b00JcBtn"
                style="@style/b00RightBtnStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/b00_taxi_btn_0"
                android:text="@string/b03v00_left_jc" />

            <Button
                android:id="@+id/b00JsBtn"
                style="@style/b00RightBtnStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/b00_js_btn_0"
                android:text="@string/b03v00_left_jsf" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>