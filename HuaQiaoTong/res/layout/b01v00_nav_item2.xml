<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CommonPanddingTheme1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center|top"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/b01v00NavView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center" >

        <TextView
            android:id="@+id/b01v00NavName"
            style="@style/B01v00ItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导航" />

        <ImageView
            android:id="@+id/b01v00NavImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/b01v00_nav_arr_j_0" />
    </LinearLayout>
    
    <ListView 
        android:id="@+id/b01v00NavItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="@drawable/b01v00_nav_item_bg_1"
        android:layout_marginTop="10dp" />

</LinearLayout>